<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Basic CSS -->
    <link href="css/misc.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://fontawesome.io/3.2.1/assets/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Slider CSS -->
    <link href="css/ninja-slider.css" rel="stylesheet" />
    <link href="css/thumbnail-slider.css" rel="stylesheet" type="text/css" />
    <!-- Script -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="js/jquery-1.11.3.min.js" type="text/javascript"></script>
    <script src="js/jssor.slider-21.1.6.mini.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <!-- Slider script -->
    <script src="js/thumbnail-slider.js" type="text/javascript"></script>
    <script src="js/ninja-slider.js"></script>
    <!-- Angular JS -->
    <script src="/angular/angular.js"></script>
    <script src="/angular-route/angular-route.js"></script>
    <script src="/angular-ui-router/release/angular-ui-router.js"></script>
    <script src="main.js"></script>
    <script src="/Controller/MainController.js"></script>
    <style>
        /* Remove the navbar's default margin-bottom and rounded borders */

        .navbar {
            margin-bottom: 0;
            border-radius: 0;
        }
        /* Set height of the grid so .sidenav can be 100% (adjust as needed) */

        .row.content {
            height: 450px
        }
        /* Set gray background color and 100% height */

        .sidenav {
            padding-top: 20px;
            background-color: #f1f1f1;
            height: 100%;
        }
        /* Set black background color, white text and some padding */

        footer {
            background-color: #555;
            color: white;
            padding: 15px;
        }
        /* On small screens, set height to 'auto' for sidenav and grid */

        @media screen and (max-width: 767px) {
            .sidenav {
                height: auto;
                padding: 15px;
            }
            .row.content {
                height: auto
            }
        }
    </style>
</head>

<body>
    <div ng-app="mainModule" ng-controller="MainController" ng-init="load()">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <!-- ======== TOP CHECKBOX ======== -->
                <div class="collapse navbar-collapse" id="myNavbar">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-2">
                                <a class="navbar-brand" href="#">GO FOR IT</a>
                            </div>
                            <div class="col-md-8">
                                <ul class="nav navbar-nav navbar-center">
                                    <li>
                                        <label class="lbl-checkbox">MOVIE</label>
                                        <input type="checkbox" value="">
                                    </li>
                                    <li>
                                        <label class="lbl-checkbox">RESTAURANT</label>
                                        <input type="checkbox" value="">
                                    </li>
                                    <li>
                                        <label class="lbl-checkbox">CONCERT</label>
                                        <input type="checkbox" value="">
                                    </li>
                                    <li>
                                        <label class="lbl-checkbox">STREETFOOD</label>
                                        <input type="checkbox" value="">
                                    </li>
                                    <li>
                                        <label class="lbl-checkbox">OUTDOOR</label>
                                        <input type="checkbox" value="">
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-2">
                                <ul class="nav navbar-nav navbar-right">
                                    <li>
                                        <a href="/auth/facebook" ng-hide="authenticated"><span class="glyphicon glyphicon-log-in"></span> Login</a>
                                        <a data-toggle="modal" href="#profileModal" ng-show="authenticated">
                                            <table>
                                                <tr>
                                                    <td><img src="{{imgsrc}}" class="img-responsive" style="width:50%" alt="Image"></td>
                                                    <td>{{username}}</td>
                                                </tr>
                                            </table>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <div class="modal fade" id="profileModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <form name="userForm" ng-controller="LoginCtrl" role="form" class="form-horizontal" novalidate>
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Profile setting</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Age</label>
                                <div class="col-sm-8">
                                    <select class="form-control">
                                        <option>Show my age</option>
                                        <option>Don't show my age</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Show Facebook profile</label>
                                <div class="col-sm-8">
                                    <select class="form-control">
                                        <option>Yes</option>
                                        <option>No</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Allow stranger message</label>
                                <div class="col-sm-8">
                                    <select class="form-control">
                                        <option>Yes</option>
                                        <option>No</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-default" ng-click="login()" data-dismiss="modal" ng-disabled="loginForm.$invalid">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid text-center">
        <h3>SHALL WE GO </h3>

        <!-- ======== Slider start ======== -->
        <div style="width:1000px;margin:0 auto;">
            <div id="ninja-slider" style="float:left;">
                <div class="slider-inner">
                    <ul>
                        <li>
                            <a class="ns-img" href="img/slide/1.jpg"></a>
                            <div class="caption">
                                <div class="caption-top">
                                    <span class="title">
                                  Lorem Ipsum is simply dummy text of the printing and typesetting
                                </span>
                                    <span class="favourite">
                                  <i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i>
                                </span>
                                </div>
                                <div class="address">
                                    Lorem Ipsum is simply dummy text
                                </div>
                            </div>
                        </li>
                        <li>
                            <a class="ns-img" href="img/slide/2.jpg"></a>
                            <div class="caption">
                                <div class="caption-top">
                                    <span class="title">
                                  Lorem Ipsum is simply dummy text of the printing and typesetting
                                </span>
                                    <span class="favourite">
                                  <i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i>
                                </span>
                                </div>
                                <div class="address">
                                    Lorem Ipsum is simply dummy text
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="fs-icon" title="Expand/Close"></div>
                </div>
            </div>
            <div id="thumbnail-slider" style="float:left;">
                <div class="inner">
                    <ul>
                        <li>
                            <a class="thumb" href="img/slide/1.jpg"></a>

                        </li>
                        <li>
                            <a class="thumb" href="img/slide/2.jpg"></a>
                        </li>
                    </ul>
                </div>
            </div>
            <div style="clear:both;"></div>
        </div>
        <!-- ======== Slider end ======== -->

        <br>
        <div class="row">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-4">
                <!--  ======== Filter collapse  ======== -->
                <button class="btn btn-info" data-toggle="collapse" data-target="#demo">You are looking for ...</button>
                <div id="demo" class="collapse">
                    <form>
                        <div class="input-group">
                            <span class="input" style="font-weight:bold">Gender:</span>
                            <select class="form-control " id="sel1">
                                <option>Male</option>
                                <option>Female</option>
                            </select>
                        </div>
                        <br>
                        <div class="input-group">
                            <span class="input" style="font-weight:bold">Age: </span>
                            <input type="text" id="amount" readonly style="border:0; color:#f6931f; font-weight:bold;text-align: center;">
                            <div id="slider-range" style="width:200px"></div>
                        </div>
                        <br>
                        <div class="input-group">
                            <span class="input" style="font-weight:bold">Distance: </span>
                            <input type="text" id="distance" readonly style="border:0; color:#f6931f; font-weight:bold;text-align: center;">
                            <div id="slider-range2" style="width:200px"></div>
                        </div>
                    </form>
                </div>
                <!-- ============================ -->
                <!-- ======== Main button ========  -->
                <div class="row">
                    <button class="button" style="margin:20px">
                        <<</button>
                            <button class="button" style="margin:20px">I'M GOING</button>
                            <button class="button" style="margin:20px">>></button>
                </div>
            </div>
            <div class="col-sm-4">
            </div>
        </div>
        <div class="row">
            <button class="button" style="margin:20px">BOOK TICKET</button>
        </div>
    </div>

    <!-- <footer class="container-fluid text-center"> -->
    </footer>

</body>
<script>
    $(function() {
        /* --------- AGE SLIDER --------------*/
        $("#slider-range").slider({
            range: true,
            min: 18,
            max: 30,
            values: [18, 24],
            slide: function(event, ui) {
                $("#amount").val(ui.values[0] + " - " + ui.values[1]);
            }
        });
        $("#amount").val($("#slider-range").slider("values", 0) +
            " - " + $("#slider-range").slider("values", 1));
        /* --------- DISTANCE SLIDER --------------*/
        $("#slider-range2").slider({
            range: true,
            min: 1,
            max: 20,
            values: [1, 20],
            slide: function(event, ui) {
                $("#distance").val(ui.values[0] + " - " + ui.values[1]);
            }
        });
        $("#distance").val($("#slider-range2").slider("values", 0) +
            " - " + $("#slider-range2").slider("values", 1));
    });
</script>

</html>
